<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="AppThemeMain" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
<!--        <item name="colorPrimary">@color/colorPrimary</item>-->
<!--        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
<!--        <item name="colorAccent">@color/colorAccent</item>-->

        <!-- Set status bar color -->
        <item name="android:statusBarColor">@color/color_110620</item>
    </style>

    <style name="AppThemeSplash" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Set status bar color -->
        <item name="android:statusBarColor">@color/color_292727</item>
    </style>

    <style name="AppThemeSetting" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Set status bar color -->
        <item name="android:statusBarColor">@color/color_F04040</item>
    </style>

    <style name="CenteredTabLayout" parent="CenteredTabLayout.TabLayout">
        <item name="tabMinWidth">190dp</item>
        <item name="tabTextAppearance">@style/H5</item>
        <item name="android:elevation">1dp</item>
    </style>

    <style name="CenteredTabLayout.TabLayout" parent="@style/Widget.MaterialComponents.TabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="tabIndicatorColor">?colorPrimary</item>
        <item name="tabGravity">center</item>
        <item name="textAllCaps">false</item>
        <item name="tabMode">fixed</item>
    </style>

    <style name="H5">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline6
        </item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontWeight">700</item>
        <item name="textAllCaps">false</item>
        <item name="lineSpacing">24dp</item>
    </style>

    <style name="TabLayoutTextAppearance">
        <item name="android:textSize">@dimen/sp14</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="CustomFontSizeTabLayout">
        <item name="tabPaddingStart">@dimen/dp16</item>
        <item name="tabPaddingEnd">@dimen/dp16</item>
        <item name="tabMinWidth">0dp</item>
        <item name="tabSelectedTextColor">@color/color_F04040</item>
        <item name="tabTextColor">@color/black</item>
        <item name="tabMode">scrollable</item>
    </style>

</resources>