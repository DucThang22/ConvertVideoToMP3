<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Nền của ProgressBar -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#D3D3D3"/> <!-- Màu nền nhạt -->
        </shape>
    </item>
    <!-- Màu hiển thị tiến trình -->
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="#FF6347"/> <!-- Màu tiến trình (ví dụ: đỏ) -->
            </shape>
        </clip>
    </item>
</layer-list>